      <button class="club-dashboard-challenge-tab active" data-target="given">Challenges Given</button>
      <button class="club-dashboard-challenge-tab" data-target="received">Challenges Received</button>
    </div>


    <!-- Challenges Given -->
    <div class="club-dashboard-challenge-content" id="challenge-given">
      <% if (challange_given.length> 0) { %>
        <% challange_given.forEach(match=> { %>
          <div class="club-dashboard-challenge-card">
            <div class="club-dashboard-challenge-header">
                 <% if (match.matchId.club2.logo) { %>
                  <div><img src="<%= match.matchId.club2.logo%>" class="club-dashboard-opponent-logo-img" alt="Logo"></div>
                 <% } else { %>
                 <div> <img src="/images/avatar.png" class="club-dashboard-opponent-logo-img" alt="Logo"></div>
                <% } %>
              <span class="club-dashboard-challenge-status <%= match.matchId.challange_status %>">
                <%= match.matchId.challange_status %>
              </span>
            </div>
            <% let your_name=user.name; %>
              <% let opponent_name=match.matchId.club1.name===your_name ? match.matchId.club2.name : match.club1.name; %>

                <h3 class="club-dashboard-challenge-title">Vs <%= opponent_name %>
                </h3>
                <p class="club-dashboard-challenge-meta">
                  <%= match.matchId.matchDate.toLocaleString() %>
                </p>
                <p class="club-dashboard-challenge-location"><i class="fas fa-map-marker-alt"></i>
                  <%= match.matchId.venue %>
                </p>
                <p class="club-dashboard-challenge-prize"><i class="fas fa-trophy"></i> Prize: ₹ <%= match.matchId.prize %>
                </p>
          </div>
          <% }); %>
            <% } else { %>
              <div class="club-dashboard-no-data">
                <p>No challenges given yet.</p>
              </div>
              <% } %>


    </div>

    <!-- Challenges Received -->
    <div class="club-dashboard-challenge-content hidden" id="challenge-received">
      <% if (challange_recived.length> 0) { %>
        <% challange_recived.forEach(match=> { %>
          <% let your_name=user.name; %>
            <% let opponent_name=match.matchId.club1.name===your_name ? match.matchId.club2.name : match.matchId.club1.name; %>
              <div class="club-dashboard-challenge-card">
                <% if (match.matchId.club1.logo) { %>
                  <div><img src="<%= match.matchId.club1.logo%>" class="club-dashboard-opponent-logo-img" alt="Logo"></div>
                 <% } else { %>
                 <div> <img src="/images/avatar.png" class="club-dashboard-opponent-logo-img" alt="Logo"></div>
                <% } %>
                <h3 class="club-dashboard-challenge-title">Vs <%= opponent_name %>
                </h3>
                <p class="club-dashboard-challenge-meta">
                  <%= match.matchId.matchDate.toLocaleString() %>
                </p>
                <p class="club-dashboard-challenge-location"><i class="fas fa-map-marker-alt"></i>
                  <%= match.matchId.venue %>
                </p>
                <p class="club-dashboard-challenge-prize"><i class="fas fa-trophy"></i> Prize: ₹ <%= match.matchId.prize %>
                </p>
                <p class="club-dashboard-challenge-prize"><i class="fa-solid fa-question"></i>Type:  <%= match.matchId.match_type %>
                </p>
                <div class="club-dashboard-challenge-actions">
                 <% if (match.matchId.challange_status === 'pending') { %>
                   <form action="/dashboard/clubs/challange_accept" method="POST">
                    <input type="hidden" name="match_id" value="<%= match.matchId._id %>">
                    <button class="club-dashboard-challenge-btn accept" type="submit">Accept</button>
                  </form>
                  <form action="/dashboard/clubs/challange_reject" method="POST">
                    <input type="hidden" name="match_id" value="<%= match.matchId._id %>">
                    <button class="club-dashboard-challenge-btn reject" type="submit">Reject</button>
                  </form>
                  <% } else { %>
                   <span class="club-dashboard-challenge-status <%= match.matchId.challange_status %>">
                <%= match.matchId.challange_status %>
              </span>
                 <% } %>
                </div>
              </div>
              <% }); %>
                <% } else { %>
                  <div class="club-dashboard-no-data">
                    <p>No challenges received yet.</p>
                  </div>
                  <% } %>
    </div>
  </div>
  <!-- Button to show form (use JS to toggle visibility) -->
  <button class="club-dashboard-create-btn">
    + Create New Challenge
  </button>

  <!-- Hidden Form -->
  <form id="createChallengeForm" action="/dashboard/clubs/create_challenge" method="POST"
    class="club-dashboard-create-form ">
    <div>
      <label for="opponent">Opponent Club</label>
      <select name="club2" id="opponent" required>
        <option>--select--</option>
        <% let otherClubs=clubs.filter(club=> club.name !== user.name) %>
          <% otherClubs.forEach(club=> { %>
            <option value="<%= club._id %>">
              <%= club.name %>
            </option>
            <% }) %>
      </select>
    </div>

    <div>
      <label for="venue">Venue</label>
      <input type="text" name="venue" id="venue" required>
    </div>

    <div>
      <label for="matchType">Match Type</label>
      <select name="match_type" id="matchType" required>
        <option>--select--</option>
        <option value="T20">T20</option>
        <option value="ODI">ODI</option>
        <option value="Test">Test</option>
      </select>
    </div>

    <div>
      <label for="matchDate">Match Date</label>
      <input type="datetime-local" placeholder="Enter Venue" name="matchDate" id="matchDate" required>
    </div>

    <div>
      <label for="prize">Prize (₹)</label>
      <input type="number" placeholder="Prize for winner Club" name="prize" id="prize" required>
    </div>

    <button type="submit">Send Challenge</button>
  </form>
</div>



</div>

