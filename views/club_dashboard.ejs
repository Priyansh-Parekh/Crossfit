          <input name="name" id="hiddenName" type="hidden">
          <input name="bio" id="hiddenBio" type="hidden">
          <input name="founded_year" id="hiddenFoundedYear" type="hidden">
          <input name="slogan" id="hiddenSlogan" type="hidden">
