      <input type="number" name="total_balls" placeholder="Total Balls Faced" />
      <select name="bowling_style" name="bowling_style" required>
        <option>Bowling Style</option>
        <option value="Pacer">Pacer</option>
        <option value="Medium Pacer">Medium Pacer</option>
        <option value="Left Off Spin">Left Off Spin</option>
        <option value="Left Leg Spin">Left Leg Spin</option>
        <option value="Rignt Off Spin">Rignt Off Spin</option>
        <option value="Right Leg Spin">Right Leg Spin</option>
      </select>
      <input type="number" step="0.1" name="overs_deliverd" placeholder="Overs Delivered" />
      <input type="number" name="wickets" placeholder="Wicket Taken" />
      <input type="number" name="runs_given" placeholder="Runs Given" />
      <input type="number" name="jersey_number" placeholder="Jersey Number" required />

      <button type="submit" class="club-dashboard-btn-primary">Add Player</button>
    </form>
  </div>



</div>
</div>
</div>

<div id="club-dashboard-live-updates" class="club-dashboard-current">
  <div class="club-dashboard-page-header">
    <h1 class="club-dashboard-page-title">Live Match Updates</h1>
    <p class="club-dashboard-page-subtitle">Update live scores and match progress</p>
  </div>


  <section>
    <h2 class="club-liveupdate-section-title club-liveupdate-live-title">Live Matches</h2>
    <!-- Live Matches Section -->
    <% if (live_matches) { %>
      <% live_matches.forEach(match=> { %>
        <div class="club-liveupdate-section club-dashboard-live-sect">
          <div class="club-liveupdate-live-match-card">
            <div class="club-liveupdate-clubs">
              <div class="club-liveupdate-club">
                <img src="<%= match.matchId.club1.logo|| '/images/avatar.png' %> " alt="Club 1 Logo"
                  class="club-liveupdate-logo">
                <span>
                  <%= match.matchId.club1.name %>
                </span>
              </div>
              <span class="club-liveupdate-vs">vs</span>
              <div class="club-liveupdate-club">
                <img src="<%= match.matchId.club2.logo|| '/images/avatar.png' %>" alt="Club 2 Logo"
                  class="club-liveupdate-logo">
                <span>
                  <%= match.matchId.club2.name %>
                </span>
              </div>
            </div>
            <div class="club-liveupdate-score-info" data-match-id="<%= match.matchId._id %>">
              <p class="club-liveupdate-score" id="score-<%= match.matchId._id %>">
                <%= match.matchId.current_batting?.name %>:
                  <% const isClub1Batting=String(match.matchId.current_batting._id)===String(match.matchId.club1._id);%>
                    <% const score=isClub1Batting ? match.matchId.score.club1 : match.matchId.score.club2; %>
                      <%= score.runs %>/<%= score.wickets %> (<%= score.overs %>)%>
              </p>
            </div>

            <div class="club-liveupdate-batting" id="batting-<%= match.matchId._id %>">
              <strong>Batting:</strong>
              <p>
                * <% if (match.matchId.stricker && match.matchId.nonstricker) { %>
                  <%= match.matchId.stricker.name %> - <%= match.matchId.stricker_score.runs %>(<%=
                        match.matchId.stricker_score.balls %>), <%= match.matchId.nonstricker.name %> - <%=
                            match.matchId.nonstricker_score.runs %>(<%= match.matchId.nonstricker_score.balls %>)
                              <% } %>
              </p>
            </div>
            <div class="club-liveupdate-bowling" id="bowling-<%= match.matchId._id %>">
              <strong>Bowler:</strong>
              <p>
                <% if ( match.matchId.bowler) { %>
                  <%= match.matchId.bowler.name %>
                    - <%= match.matchId.bowler_score.wickets %>/<%= match.matchId.bowler_score.runs %> in <%=
                          match.matchId.bowler_score.overs %> overs
                          <% } %>
              </p>


            </div>
          </div>
          <a href="/match/update_score/<%= match.matchId._id %>" class="club-liveupdate-btn">Update Score</a>
        </div>
        <% }) %>
          <% } else { %>
            <div id="club-dashboard-no-live-row">
              ðŸš« No live matches currently.
            </div>

            <% } %>

  </section>

  <section>

    <h2 class="club-liveupdate-section-title club-liveupdate-upcoming-title">Upcoming Matches</h2>
    <!-- Upcoming Matches Section -->
    <% if (upcoming_matches) { %>
      <% upcoming_matches.forEach(match=> { %>
        <div class="club-liveupdate-section club-dashboard-upcoming-sect">
          <div class="club-liveupdate-upcoming-match-card">
            <div class="club-liveupdate-clubs-vertical">
              <div class="club-liveupdate-club-vertical">
                <img src="<%=  match.matchId.club1.logo || '/images/avatar.png' %>" alt="Club 3 Logo"
                  class="club-liveupdate-logo">
                <span>
                  <%= match.matchId.club1.name %>
                </span>
              </div>
              <span class="club-liveupdate-vs">vs</span>
              <div class="club-liveupdate-club-vertical">
                <img src="<%=  match.matchId.club2.logo || '/images/avatar.png' %>" alt="Club 4 Logo"
                  class="club-liveupdate-logo">
                <span>
                  <%= match.matchId.club2.name %>
                </span>
              </div>
            </div>

            <% const isClub1=String(user._id)===String(match.matchId.club1._id);%>
              <% const isSetupDone=isClub1 ? match.matchId.setup_club1 : match.matchId.setup_club2;%>

                <% if (!isSetupDone) { %>
                  <p class="club-liveupdate-note">Remember to choose your players and Leaders for this match!</p>
                  <% } else { %>
                    <p class="club-liveupdate-note">If you want to edit your setup</p>
                    <% } %>

                      <a href="/match/match_setup/<%= match.matchId._id %>" class="club-liveupdate-btn">Match Setup</a>

          </div>
          <% if (match.matchId.setup_club1 && match.matchId.setup_club2) { %>
            <div class="club-dashboard-make-live-wrapper">
              <p class="club-dashboard-make-live-msg">
                âœ… Both clubs have completed setup. You can now make this match live!
              </p>
              <form action="/match/make_live/<%= match.matchId._id %>" method="POST">
                <button type="submit" class="club-dashboard-make-live-btn">ðŸŽ¬ Make Match Live</button>
              </form>
            </div>
            <% } %>

        </div>
        <% }) %>
          <% } else { %>
            <div class="club-dashboard-upcoming-message-row" id="club-dashboard-no-upcoming-row">
              ðŸ•’ No upcoming matches scheduled.
            </div>
            <% } %>

  </section>

</div>




