        <thead>
          <tr>
            <th>Opponent</th>
            <th>Date</th>
            <th>Result</th>
            <th>Score</th>
          </tr>
        </thead>
        <tbody>
          <tr>

            <% if ( user.match_played.length>0) { %>
              <% let recent_match_count=0; %>
                <% user.match_played.forEach(match=> { %>
                  <% if (recent_match_count>= 5) return; %>
                    <% if (match.played===true) { %>
                      <% recent_match_count++; %>
                        <% let Opponent=match.matchId.club1===user._id ? match.matchId.club2 : match.matchId.club1; %>
