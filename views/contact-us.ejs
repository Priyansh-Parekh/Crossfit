<div class="contact-page-container">
    <!-- Hero Section -->
    <div class="contact-hero">
        <h1 class="contact-hero-heading">Get in Touch</h1>
        <p class="contact-hero-subheading">
            We'd love to hear from you! Whether you have a question about our features, 
            a trial, or anything else, our team is ready to answer all your questions.
        </p>
    </div>

    <!-- Form Container -->
    <div class="contact-form-container">
        <h2 class="form-container-heading">Send Us a Message</h2>
        
        <div class="contact-success-message" id="contact-us-success" style="display: none;">
            <p>Your email client should now be open. Please review and send the message.</p>
        </div>

        <!-- The <form> tag is now for structure, not for a POST request -->
        <form class="contact-form-body" id="contact-us-form">
            <!-- Form Field Group: First Name -->
            <div class="form-field-group">
                <label for="contact-us-first-name" class="form-field-label">First Name</label>
                <div class="form-field-control">
                    <input type="text" id="contact-us-first-name" name="firstName" class="form-input" required>
                </div>
            </div>

            <!-- Form Field Group: Last Name -->
            <div class="form-field-group">
                <label for="contact-us-last-name" class="form-field-label">Last Name</label>
                <div class="form-field-control">
                    <input type="text" id="contact-us-last-name" name="lastName" class="form-input" required>
                </div>
            </div>

            <!-- Form Field Group: Email -->
            <div class="form-field-group">
                <label for="contact-us-email" class="form-field-label">Email Address</label>
                <div class="form-field-control">
                    <input type="email" id="contact-us-email" name="email" class="form-input" required>
                </div>
            </div>

            <!-- Form Field Group: Phone Number -->
            <div class="form-field-group">
                <label for="contact-us-phone" class="form-field-label">Phone Number <span class="label-optional">(Optional)</span></label>
                <div class="form-field-control">
                    <input type="tel" id="contact-us-phone" name="phone" class="form-input">
                </div>
            </div>
            
            <!-- Form Field Group: Subject -->
            <div class="form-field-group">
                <label for="contact-us-subject" class="form-field-label">Subject</label>
                <div class="form-field-control">
                    <select id="contact-us-subject" name="subject" class="form-select" required>
                        <option value="">Select a subject</option>
                        <option value="General Inquiry">General Inquiry</option>
                        <option value="Membership Information">Membership Information</option>
                        <option value="Training Programs">Training Programs</option>
                        <option value="Technical Support">Technical Support</option>
                        <option value="Feedback">Feedback</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>

            <!-- Form Field Group: Message -->
            <div class="form-field-group-textarea">
                <label for="contact-us-message" class="form-field-label">Message</label>
                <div class="form-field-control">
                    <textarea id="contact-us-message" name="message" class="form-textarea" rows="6" placeholder="Please tell us how we can help you..." required></textarea>
                </div>
            </div>

            <!-- Form Submit -->
            <div class="form-submit-group">
                <div class="form-field-label"></div> <!-- This empty div is for alignment -->
                <div class="form-field-control">
                    <!-- The button type is now "button" to prevent a default form submission -->
                    <button type="button" id="submit-button" class="form-submit-btn">Send Message</button>
                </div>
            </div>
        </form>
    </div>

    <!-- Horizontal Info Cards Grid -->
    <div class="contact-info-grid">
        <div class="info-card">
            <div class="info-card-icon"><i class="fas fa-map-marker-alt"></i></div>
            <h3 class="info-card-title">Visit Us</h3>
            <p class="info-card-text">123 Fitness Street<br>CrossFit City, CF 12345</p>
        </div>
        <div class="info-card">
            <div class="info-card-icon"><i class="fas fa-phone"></i></div>
            <h3 class="info-card-title">Call Us</h3>
            <p class="info-card-text"><a href="tel:+1234567890" class="info-card-link">+1 (234) 567-890</a></p>
        </div>
        <div class="info-card">
            <div class="info-card-icon"><i class="fas fa-envelope"></i></div>
            <h3 class="info-card-title">Email Us</h3>
            <p class="info-card-text"><a href="mailto:info@crossfit.com" class="info-card-link">info@crossfit.com</a></p>
        </div>
        <div class="info-card">
            <div class="info-card-icon"><i class="fas fa-clock"></i></div>
            <h3 class="info-card-title">Operating Hours</h3>
            <p class="info-card-text">Mon - Fri: 6 AM - 10 PM<br>Sat - Sun: 7 AM - 8 PM</p>
        </div>
    </div>
</div>

