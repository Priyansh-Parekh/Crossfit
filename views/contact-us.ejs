<!--  NEW JAVASCRIPT FOR HANDLING THE MAILTO FUNCTION   -->
<!-- ================================================== -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('contact-us-form');
        const submitButton = document.getElementById('submit-button');
        const successMessage = document.getElementById('contact-us-success');

        submitButton.addEventListener('click', function(event) {
            // Check if the form is valid before proceeding
            if (!form.checkValidity()) {
                // If not valid, trigger the browser's validation UI and stop
                form.reportValidity();
                return;
            }
            
            // 1. Get all the data from the form fields
            const firstName = document.getElementById('contact-us-first-name').value;
            const lastName = document.getElementById('contact-us-last-name').value;
            const email = document.getElementById('contact-us-email').value;
            const phone = document.getElementById('contact-us-phone').value;
            const subject = document.getElementById('contact-us-subject').value;
            const message = document.getElementById('contact-us-message').value;

            // 2. Construct the email body
            // encodeURIComponent ensures special characters are handled correctly
            const emailBody = `
Hello,

You have a new message from your website contact form.

---
Name: ${firstName} ${lastName}
Email: ${email}
Phone: ${phone || 'Not provided'}
---

Message:
${message}
            `;

            // 3. Create the mailto link
            const mailtoLink = `mailto:mohammedmatin762@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(emailBody)}`;

            // 4. Open the user's email client
            window.location.href = mailtoLink;

            // 5. Show a success message and reset the form
            successMessage.style.display = 'block';
            form.reset();
            
            // Hide the message after a few seconds
            setTimeout(() => {
                successMessage.style.display = 'none';
            }, 5000);
        });
    });
</script>
