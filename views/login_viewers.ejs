<main class="login-viewer-main-content">
    <section class="login-viewer-form-section">
        <div class="login-viewer-container">
            <h2 class="login-viewer-form-title">Welcome Back, Viewer!</h2>
            <p class="login-viewer-form-subtitle">Log in to access your personalized sports content.</p>

            <form class="login-viewer-form" id="login-viewer-form">
                <div class="login-viewer-form-group">
                    <label for="login-viewer-email" class="login-viewer-label">Email:</label>
                    <input type="email" id="login-viewer-email" class="login-viewer-input" name="user_email" required>
                </div>

                <div class="login-viewer-form-group">
                    <label for="login-viewer-password" class="login-viewer-label">Password:</label>
                    <input type="password" id="login-viewer-password" class="login-viewer-input" name="user_password" required>
                </div>

                <button type="submit" class="login-viewer-submit-btn">Log In</button>
            </form>
        </div>
    </section>
</main>