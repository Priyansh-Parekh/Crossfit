<main class="register-club-main-content">
    <section class="register-club-form-section">
        <div class="register-club-container">
            <h2 class="register-club-form-title">Register Your Sports Club!</h2>
            <p class="register-club-form-subtitle">Showcase your club to the world. Fill in the details below to get
                started.</p>

            <form class="register-club-form" id="register-club-registration-form" action="/register/register_clubs" method="post">
                <div class="register-club-form-group">
                    <label for="register-club-name" class="register-club-label">Club Name:</label>
                    <input type="text" id="register-club-name" class="register-club-input" name="name" required>
                </div>

                <div class="register-club-form-group">
                    <label for="register-club-sport" class="register-club-label">Sport:</label>
                    <select id="register-club-founder-register" class="register-club-input" name="sport" required>
                   <option  disabled selected >--select--</option>
                        <option value="cricket">üèè Cricket</option>
                        <option value="football">‚öΩ Football</option>
                    </select>
                </div>

                <div class="register-club-form-group">
                    <label for="register-club-email" class="register-club-label">Club Email:</label>
                    <input type="email" id="register-club-email" class="register-club-input" name="email" required>
                </div>

                <div class="register-club-form-group">
                    <label for="register-club-password" class="register-club-label">Club Password:</label>
                    <input type="password" id="register-club-password" class="register-club-input" name="password"
                        required>
                </div>

                <div class="register-club-form-group">
                    <label for="register-club-bio" class="register-club-label">Club Bio:</label>
                    <textarea id="register-club-bio" class="register-club-textarea" name="bio" rows="5"
                        placeholder="Tell us about your club's history, achievements, and mission..."
                        required></textarea>
                </div>

                <div class="register-club-form-group">
                    <label for="register-club-founding-year" class="register-club-label">Founding Year:</label>
                    <input type="number" id="register-club-founding-year" class="register-club-input"
                        name="founded_year" min="1800" max="2025" required>
                </div>

                <div class="register-club-form-group">
                    <label for="register-club-founder-name" class="register-club-label">Name of Founder:</label>
                    <input type="text" id="register-club-founder-name" class="register-club-input" name="founder_name"
                        required>
                </div>

                <div class="register-club-form-group">
                    <label for="register-club-slogan" class="register-club-label">Club Slogan:</label>
                    <input type="text" id="register-club-slogan" class="register-club-input" name="slogan"
                        placeholder="E.g., 'Unity Through Sport', 'Passion. Dedication. Victory.'">
                </div>

                <button type="submit" class="register-club-submit-btn">Register Club</button>
            </form>
        </div>
    </section>
</main>