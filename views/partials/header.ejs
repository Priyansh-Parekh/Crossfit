<header>
  <div class="logo-container">
    <img src="/images/Crossfit.jpg" alt="logo-image">
    <a href="/">Crossfit</a>

  </div>
  <div class="links">
    <ul>
      <li><a href="/news">News</a></li>
      <li><a href="/live_scores">Live-Score</a></li>
      <li><a href="/leagues">Leagues</a></li>
      <li><a href="/merchandise">Merchandise</a></li>
      <li><a href="/clubs">clubs</a></li>
    </ul>

    <% if(user === "none"){ %>
    <button class="home-role-btn><a href="/#home-roles">Login</a></button>
    <% }else if(user.user_type ==="club"){ %>
    <button class='links-button '><a href="/dashboard/clubs"><%= user.name  %></a></button>
    <button class="home-role-btn home-role-logout-btn"><a href="/#home-roles">Log Out</a></button>
    <% }else if(user.user_type ==="league"){ %>
    <button class='links-button '><a href="/dashboard/league"><%=user.name  %></a></button>
      <button   class="home-role-btn home-role-logout-btn"><a href="/#home-roles">Log Out</a></button>
    
    <% }else if(user.user_type ==="viewer"){ %>
    <button class="links-button "><a href="/dashboard/viewer"><%=user.name  %></a></button>
      <button  class="home-role-btn home-role-logout-btn"><a href="/#home-roles">Log Out</a></button>
    <% } %>
  </div>
</header>