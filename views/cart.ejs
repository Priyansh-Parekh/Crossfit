<!-- Link to Bootstrap for grid layout -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap-grid.min.css" rel="stylesheet">
<!-- Link to the specific stylesheet for this page -->
<link rel="stylesheet" href="/css/cart.css">

<main class="container" style="padding: 2rem;">
    <h1>Your Shopping Cart ðŸ›’</h1>
    <hr>
    
    <!-- Check if the cart is empty -->
    <% if (!cart || cart.items.length === 0) { %>
        <div class="text-center p-5">
            <h4>Your cart is empty.</h4>
            <a href="/merchandise" class="btn btn-primary mt-3">Continue Shopping</a>
        </div>
    <% } else { %>
        <div class="row">
            <!-- Cart Items Column -->
            <div class="col-md-8">
                <div class="cart-items-list">
                    <!-- Loop through each item in the cart -->
                    <% cart.items.forEach(item => { %>
                        <!-- Ensure the product data exists before trying to display it -->
                        <% if (item.productId) { %>
                            <div class="cart-item">
                                <img src="<%= item.productId.imageUrl || '/img/default_product.png' %>" class="cart-item__image" alt="<%= item.productId.name %>">
                                <div class="cart-item__details">
                                    <h5 class="cart-item__title"><%= item.productId.name %></h5>
                                    <p class="cart-item__meta">Quantity: <%= item.quantity %></p>
                                    <p class="cart-item__meta">Price: â‚¹<%= item.productId.price.toFixed(2) %></p>
                                </div>
                                <!-- Calculate and display the subtotal for this item -->
                                <strong class="cart-item__subtotal">â‚¹<%= (item.quantity * item.productId.price).toFixed(2) %></strong>
                            </div>
                        <% } %>
                    <% }); %>
                </div>
            </div>

            <!-- Cart Summary Column -->
            <div class="col-md-4">
                <div class="cart-summary">
                    <h4 class="cart-summary__title">Cart Summary</h4>
                    <hr>
                    <div class="cart-summary__line">
                        <span>Total</span>
                        <!-- Display the total calculated in your backend route -->
                        <span>â‚¹<%= total %></span>
                    </div>
                    <div class="d-grid mt-4">
                        <a href="#" class="btn btn-success">Proceed to Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</main>
