<!-- Add these links to your <head> or main layout file -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap-grid.min.css" rel="stylesheet">
<link rel="stylesheet" href="/styles/cart.css">

<main class="container" style="padding: 2rem;">
    <h1>Your Shopping Cart ðŸ›’</h1>
    <hr>
    
    <% if (!cart || cart.items.length === 0) { %>
        <div class="text-center p-5">
            <h4>Your cart is empty.</h4>
            <a href="/merchandise" class="btn btn-primary mt-3">Continue Shopping</a>
        </div>
    <% } else { %>
        <div class="row">
            <!-- Cart Items Column -->
            <div class="col-lg-8">
                <div class="cart-items-list">
                    <!-- THIS LOOP IS THE FIX -->
                    <!-- It iterates through each item in the cart and displays it -->
                    <% cart.items.forEach(item => { %>
                        <% if (item.productId) { %>
                            <div class="cart-item">
                                <img src="<%= item.productId.imageUrl || '/img/default_product.png' %>" class="cart-item__image" alt="<%= item.productId.name %>">
                                
                                <div class="cart-item__details">
                                    <h5 class="cart-item__title"><%= item.productId.name %></h5>
                                    <p class="cart-item__meta">Quantity: <%= item.quantity %></p>
                                    <p class="cart-item__meta">Price: â‚¹<%= item.productId.price.toFixed(2) %></p>
                                </div>

                                <div class="cart-item__controls">
                                    <div class="cart-item__quantity-control">
                                        <button class="cart-item__quantity-btn decrease-btn" data-id="<%= item.productId._id %>">-</button>
                                        <span class="cart-item__quantity-value"><%= item.quantity %></span>
                                        <button class="cart-item__quantity-btn increase-btn" data-id="<%= item.productId._id %>">+</button>
                                    </div>
                                    <button class="cart-item__remove-btn" data-id="<%= item.productId._id %>">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>

                                <strong class="cart-item__subtotal">â‚¹<%= (item.quantity * item.productId.price).toFixed(2) %></strong>
                            </div>
                        <% } %>
                    <% }); %>
                </div>
            </div>

            <!-- Cart Summary Column -->
            <div class="col-lg-4">
                <div class="cart-summary">
                    <h4 class="cart-summary__title">Cart Summary</h4>
                    <hr>
                    <div class="cart-summary__line user-balance">
                        <span>Your Balance:</span>
                        <!-- FIX: Added a check to prevent errors if balance is null or undefined -->
                        <span>â‚¹<%= user.balance?.toFixed(2) || '0.00' %></span>
                    </div>
                    <div class="cart-summary__line">
                        <span>Total:</span>
                        <span id="cart-total">â‚¹<%= total %></span>
                    </div>
                    
                    <div class="d-grid mt-4">
                        <% if (user.balance >= total) { %>
                            <button id="checkout-btn" class="btn btn-success">
                                <i class="fas fa-credit-card"></i> Checkout with Credits
                            </button>
                        <% } else { %>
                            <button class="btn btn-secondary" disabled>Insufficient Funds</button>
                            <p class="insufficient-funds-message">
                                You need â‚¹<%= (total - user.balance).toFixed(2) %> more. 
                                <a href="/dashboard/viewer">Add Credits</a>
                            </p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</main>

<!-- This script is necessary for the buttons to work -->
<script src="/script/cart.js"></script>
