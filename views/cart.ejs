<!-- Link to your stylesheets -->
<link rel="stylesheet" href="/styles/cart.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap-grid.min.css" rel="stylesheet">

<main class="container" style="padding: 2rem;">
    <h1>Your Shopping Cart ðŸ›’</h1>
    <hr>
    
    <% if (!cart || cart.items.length === 0) { %>
        <div class="text-center p-5">
            <h4>Your cart is empty.</h4>
            <a href="/merchandise" class="btn btn-primary mt-3">Continue Shopping</a>
        </div>
    <% } else { %>
        <div class="row">
            <div class="col-lg-8">
                <div class="cart-items-list">
                    <!-- ... (your forEach loop for cart items remains the same) ... -->
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart-summary">
                    <h4 class="cart-summary__title">Cart Summary</h4>
                    <hr>
                    <!-- Display User's Current Balance -->
                    <div class="cart-summary__line user-balance">
                        <span>Your Balance:</span>
                        <span>â‚¹<%= user.balance.toFixed(2) %></span>
                    </div>
                    <!-- Display Cart Total -->
                    <div class="cart-summary__line">
                        <span>Total:</span>
                        <span id="cart-total">â‚¹<%= total %></span>
                    </div>
                    
                    <!-- Checkout Button and Logic -->
                    <div class="d-grid mt-4">
                        <% if (user.balance >= total) { %>
                            <!-- If balance is sufficient, show the checkout button -->
                            <button id="checkout-btn" class="btn btn-success">
                                <i class="fas fa-credit-card"></i> Checkout with Credits
                            </button>
                        <% } else { %>
                            <!-- If balance is insufficient, show a disabled button and a message -->
                            <button class="btn btn-secondary" disabled>Insufficient Funds</button>
                            <p class="insufficient-funds-message">
                                You need â‚¹<%= (total - user.balance).toFixed(2) %> more. 
                                <a href="/dashboard/viewer">Add Credits</a>
                            </p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</main>

<!-- Load the updated cart script -->
<script src="/script/cart.js"></script>
